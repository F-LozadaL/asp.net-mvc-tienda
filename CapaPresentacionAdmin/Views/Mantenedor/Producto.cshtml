
@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Productos</li>
</ol>
<div class="card">
    <div class="card-header">
        <i class="fas fa-boxes me-1"></i> Lista de Marcas
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                 
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Marca</th>
                    <th>Categoria</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Activo</th>
                </tr>
            </thead>

            <tbody>
            </tbody>

        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Nuevo Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtid" type="hidden" value="0" />

                <form class="row" id="contenedor">
                    @*----------------------------columna 1*@
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <img id="img_producto" height="197" width="200" class="border rounded mx-auto d-block img-fluid" />
                        </div>
                        <div class="mb-2">
                            <input class="form-control" type="file" id="fileProducto" accept="image/png, image/jpg, image/jpeg" onchange=" " />
                        </div>
                    </div>

                    @*----------------------------columna 2*@
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label margin">Nombre</label>
                            <input type="text" class="form-control" id="txtnombre" name="nombre" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label margin">Descripcion</label>
                            <textarea type="text" class="form-control" id="txtdescripcion" name="descripcion" style="height:125px; resize:none;"></textarea>
                        </div>
                    </div>

                    @*----------------------------columna 3*@
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label margin">Marca</label>
                            <select id="cbomarca" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">

                            <label class="form-label margin">Categoria</label>
                            <select id="cbocategoria" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label margin">Precio</label>
                            <input type="text" id="textprecio" class="form-control" name="precio" autocomplete="off">
                        </div>
                    </div>

                    @*----------------------------columna 4*@
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label margin">Stock</label>
                            <input type="number" id="textstock" class="form-control" name="stock">
                        </div>

                        <div class="mb-3">
                            <label class="form-label margin">Activo</label>
                            <select id="cbactivo" class="form-select">
                                <option value=1>Si</option>
                                <option value=0>No</option>
                            </select>
                        </div>



                    </div>

                </form>


                <div class="row mt-2">
                    <div class="col-12">

                        <div id="mensajeError" class="alert alert-danger " role="alert">
                            A simple danger alert—check it out!
                        </div>
                    </div>

                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>


        </div>
    </div>
</div>

@section scripts
    {
    <script>

        var tdata;
        var filaSeleccionada;


        //data es el nombre del atributo puesto en MantedorController que devuelve ListarMarcas()
        tdata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarMarcas", "Mantenedor")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "Descripcion" },
                {
                    "data": "Activo", "render": function (valor) {
                        if (valor) return '<span class="badge rounded-pill bg-primary">Si</span>'
                        else return '<span class="badge rounded-pill bg-danger">No</span>'
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchTable": false,
                    "width": "90px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.13.1/i18n/es-ES.json"
            }
        })



        function abrirModal(data) {

            $("#mensajeError").hide();

            if (data != null) {

                $("#txtid").val(data.IdMarca);
                $("#inputDescripcion").val(data.Descripcion);
                $("#cboactivo").val(data.Activo == true ? 1 : 0);
            } else {
                $("#txtid").val(0)
                $("#inputDescripcion").val("");
                $("#cboactivo").val(1);
            }

            $('#FormModal').modal("show")
        }

        $("#tabla tbody").on("click", ".btn-editar", function () {

            filaSeleccionada = $(this).closest("tr");
            var filaData = tdata.row(filaSeleccionada).data();
            abrirModal(filaData);
        })


        $("#tabla tbody").on("click", ".btn-eliminar", function () {

            var marcaSeleccionada = $(this).closest("tr");
            var filaData = tdata.row(marcaSeleccionada).data();

            swal({
                title:"Esta Seguro?",
                text:"Desea Eliminar la Marca?",
                type:"warning",
                showCancelButton:true,
                confirmButtonClass:"btn-primary",
                confirmButtonText:"Si",
                cancelButtonText:"No",
                closeOnConfirm:true

            },
                function () {
                    jQuery.ajax({
                        url: "@Url.Action("EliminarMarca", "Mantenedor")",
                        type:"POST",
                        data: JSON.stringify({
                            id: filaData.IdMarca
                        }),
                        dataType:"json",
                        contentType:"application/json; charset=utf-8",
                        success: function (data) {
                            if (data.resultado) {
                                tdata.row(marcaSeleccionada).remove().draw();

                            } else {
                                swal("No se Pudo eliminar", data.mensaje, "error")
                            }
                        },
                        error: function (error) { console.log(error)},
                        beforeSend: function () { },
                    })
            })

        })

        function Guardar() {

            var Marca = {
                Descripcion: $("#inputDescripcion").val(),
                Activo: $("#cboactivo").val()==1?true:false ,
                IdMarca: $("#txtid").val()
            }


            //El nombre del atributo de data ha de ser el mismo nombre que del parametro del metodo en MantenedorController
            jQuery.ajax({
                url:'@Url.Action("GuardarMarca", "Mantenedor")',
                type: "POST",
                data: JSON.stringify({
                    obj: Marca
                }),
                dataType:"json",
                contentType:"application/json; charset=utf-8",
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide");

                    //Marca Nuevo / Registrar
                    if (Marca.IdMarca == 0) {

                        if (data.resultado != 0) {
                            Marca.IdMarca = data.resultado;
                            tdata.row.add(Marca).draw(false);
                            $("#FormModal").modal("hide");

                        } else {

                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }


                    //Marca Existente / Editar
                    } else {
                        if (data.resultado) {

                            tdata.row(filaSeleccionada).data(Marca).draw(false);
                            filaSelecionada = null;

                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }


                },
                error: function (error) {

                    $(".modal-body").LoadingOverlay("hide");
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                },
                beforeSend: function () {

                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    })
                },


            })


        }

    </script>
}


